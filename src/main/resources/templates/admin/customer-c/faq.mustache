{{> admin/layout/head}}

<body>
<main role="main">
    <section id="section n1">
       {{> admin/layout/side}}
        <div class="content-page">
            <div class="content-tab-bar">
                <ul class="tab-nav">
                    <li class="tab-link"><a href="/user/join">가입현황</a></li>
                    <li class="tab-link"><a href="/user/report">리뷰신고</a></li>
                    <li class="tab-link"><a href="/user/question">문의사항</a></li>
                    <li class="tab-link current"><a href="/user/faq">자주묻는 질문</a></li>
                </ul>
                <div class="tab-content current">
                    <div class="tab-head">
                        <p>FAQ</p>
                    </div>
                    <div class="tab-item">
                        <form action="#" method="#" style="width: 100%;">
                            <ul class="search-box">
                                <li class="search-left">
                                    <span>총 FAQ<em> {{count}} </em>개</span>
                                </li>
                                <li class="search-right">
                                    <div class=" duration">
                                        <label for="daterange">기간</label>
                                        <input type="text" name="daterange" value="" id="daterange" />
                                    </div>
                                    <div>
                                        <div class="tab-input-wrapper">
                                            <input class="input-id" type="text" name="keyword" placeholder="검색어 입력">
                                            <input class="submit-btn" type="submit" value="Search">
                                        </div>
                                    </div>
                                </li>
                            </ul>
                        </form>
                        <table>
                            <colgroup>
                                <col width="50%">
                                <col width="35%">
                                <col width="15%">
                            </colgroup>
                            <thead>
                            <tr>
                                <th scope="col">제목</th>
                                <th scope="col">작성자</th>
                                <th scope="col">작성일</th>
                            </tr>
                            </thead>
                            <tbody>
                            {{#faqList}}
                            <tr class="review">
                                <td class="title">{{content}}</td>
                                <td class="content">{{writer}}</td>
                                <td>{{createdAt}}</td>
                                <td class="link">
                                    <a href="/admin/faq/{{faqId}}"></a>
                                </td>
                            </tr>
                            {{/faqList}}
                            </tbody>
                        </table>
                    </div>
                    <div class="faq-button-wrapper">
                        <a class="btn black" href="/admin/faq/write-form">작성</a>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>
<script>

</script>
</body>

</html>