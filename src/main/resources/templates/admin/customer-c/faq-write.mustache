{{> admin/layout/head}}

<body>
<main role="main">
    <section id="section n1">
        {{> admin/layout/side}}
        <div class="content-page">
            <div class="content-tab-bar">
                <ul class="tab-nav">
                    <li class="tab-link"><a href="/user/join">가입현황</a></li>
                    <li class="tab-link"><a href="/user/report">리뷰신고</a></li>
                    <li class="tab-link"><a href="/user/question">문의사항</a></li>
                    <li class="tab-link current"><a href="/user/faq">자주묻는 질문</a></li>
                </ul>
                <div class="tab-content current">
                    <div class="tab-head">
                        <p>자주묻는 질문</p>
                    </div>
                    <div class="tab-item detail">
                        <div class="review-detail-wrapper">
                            <div class="detail-head">
                                <div>
                                    <p class="title">작성</p>
                                </div>
                            </div>
                            <form action="/admin/write" method="post">
                                <input type="hidden" name="userId" value="{{sessionUser.id}}">
                                <div class="detail-content">
                                    <span class="review-title">분류</span>
                                    <div class="input-wrapper">
                                        <select id="select" name="classification" class="margin-n">
                                            <option value="" disabled selected>분류</option>
                                            <option value="User">유저</option>
                                            <option value="Company">기업</option>
                                            <option value="Common" >공통</option>
                                        </select>
                                    </div>
                                    <span class="review-title">제목</span>
                                    <p class="review-content">
                                        <input name="content" type="text" class="input" >
                                    </p>
                                    <span class="review-title">내용</span>
                                    <p class="review-content">
                                        <textarea name="reply" id="" cols="30" rows="10"></textarea>
                                    </p>
                                </div>
                                    <div class="report-button-wrapper">
                                        <button class="btn black">작성완료</button>
                                    </div>
                                </form>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </section>
</main>
<script>

</script>
</body>

</html>