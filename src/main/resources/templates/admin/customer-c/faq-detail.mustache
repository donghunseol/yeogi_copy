{{> admin/layout/head}}

<body>
<main role="main">
    <section id="section n1">
        {{> admin/layout/side}}
        <div class="content-page">
            <div class="content-tab-bar">
                <ul class="tab-nav">
                    <li class="tab-link"><a href="/user/join">가입현황</a></li>
                    <li class="tab-link"><a href="/user/report">리뷰신고</a></li>
                    <li class="tab-link"><a href="/user/question">문의사항</a></li>
                    <li class="tab-link current"><a href="/user/faq">자주묻는 질문</a></li>
                </ul>
                <div class="tab-content current">
                    <div class="tab-head">
                        <p>자주묻는 질문</p>
                    </div>
                    <div class="tab-item detail">
                        <div class="review-detail-wrapper">
                            <form action="#" method="#">
                                {{#faqDetail}}
                                <div class="detail-head">
                                    <div>
                                        <p class="title">{{content}}</p><span>{{createdAt}}</span>
                                    </div>
                                </div>
                                <div class="detail-content">
                                    <span class="review-title">FAQ 답변</span>
                                    <p class="review-content">
                                        <b>{{reply}}</b>
                                        <br>
                                        <em>작성자 : {{writer}}</em>
                                    </p>
                                    <!-- <span class="review-title">답변 내용</span> -->
                                    <!-- <input type="text"> -->
                                </div>
                                <div class="report-button-wrapper">
                                    <button class="btn black" type="button" onclick="history.back()">뒤로</button>
                                </div>
                                {{/faqDetail}}
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </section>
</main>
<script>

</script>
</body>

</html>