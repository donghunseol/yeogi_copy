{{> admin/layout/head}}
<body>
<main role="main">
    <section id="section n1">
        {{> admin/layout/side}}
        <div class="content-page">
            <div class="content-tab-bar">
                <ul class="tab-nav">
                    <li class="tab-link current"><a href="/user/join">가입현황</a></li>
                    <li class="tab-link "><a href="/user/report">리뷰신고</a></li>
                    <li class="tab-link"><a href="/user/question">문의사항</a></li>
                    <li class="tab-link"><a href="/user/faq">자주묻는 질문</a></li>
                </ul>
                <div class="tab-content current">
                    <div class="tab-head">
                        <p>가입현황</p>
                    </div>
                    <div class="tab-item">
                        <form action="#" method="#" style="width: 100%;">
                            <ul class="search-box">
                                <li class="search-left">
                                    <span>총 기업 수<em> {{companyCount}} </em>개</span>
                                </li>
                                <li class="search-right">
                                    <div>
                                        <label for="comp-state">문의상태</label>
                                        <select name="state" id="comp-state">
                                            <option value="">전체</option>
                                            <option value="승인">승인</option>
                                            <option value="거절">거절</option>
                                            <option value="대기중">대기중</option>
                                        </select>
                                    </div>
                                    <div>
                                        <div class="tab-input-wrapper">
                                            <input class="input-id" type="text" name="keyword" placeholder="검색어 입력">
                                            <input class="submit-btn" type="submit" value="Search">
                                        </div>
                                    </div>
                                </li>
                            </ul>
                        </form>
                        <table>
                            <colgroup>
                                <col width="25%">
                                <col width="20%">
                                <col width="20%">
                                <col width="20%">
                                <col width="15%">
                            </colgroup>
                            <thead>
                            <tr>
                                <th scope="col">기업명</th>
                                <th scope="col">전화번호</th>
                                <th scope="col">대표이름</th>
                                <th scope="col">상태</th>
                                <th scope="col">상세보기</th>
                            </tr>
                            </thead>
                            <tbody>
                            {{#companyList}}
                                <div hidden="hidden" id="id-{{id}}" data-email="{{email}}"
                                     data-businessName="{{businessName}}" data-businessNumber="{{businessNumber}}"
                                     data-businessAddress="{{businessAddress}}" data-name="{{name}}"
                                     data-phone="{{phone}}" data-createdAt="{{createdAt}}"></div>
                                <tr>
                                    <td class="title">{{businessName}}</td>
                                    <td>{{phone}}</td>
                                    <td>{{name}}</td>
                                    <td><span class="state {{stateColor}}">{{stateMessage}}</span></td>
                                    <td><span class="detail" data-company-id="{{id}}">상세보기</span></td>
                                </tr>
                            {{/companyList}}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <!-- 회원가입 모달창 -->
        <div class="modal-bg hidden">
            <div class="modal">
                <div class="modal-head">
                    <p class="modal-txt">기업 상세정보</p>
                    <button class="btn-cls">X</button>
                </div>
                <form action="#" method="#">
                    <div class="modal-content">
                        <div class="modal-input-wrapper">
                            <label for="email">이메일</label>
                            <input disabled type="text" name="email" value="">
                        </div>
                        <div class="modal-input-wrapper">
                            <label for="businessname">등록 상호명</label>
                            <input disabled type="text" name="businessname" value="">
                        </div>
                        <div class="modal-input-wrapper">
                            <label for="businessnumber">사업자 번호</label>
                            <input disabled type="text" name="businessnumber" value="">
                        </div>
                        <div class="modal-input-wrapper">
                            <label for="businessaddress">사업자 주소</label>
                            <input disabled type="text" name="businessaddress" value="">
                        </div>
                        <div class="modal-input-wrapper">
                            <label for="name">대표이름</label>
                            <input disabled type="text" name="name" value="">
                        </div>
                        <div class="modal-input-wrapper">
                            <label for="phone">전화번호</label>
                            <input disabled type="text" name="phone" value="">
                        </div>
                        <div class="modal-input-wrapper">
                            <label for="createdat">생성일자</label>
                            <input disabled type="text" name="createdat" value="">
                        </div>
                        <div class="modal-button-wrapper">
                            <button class="black btn-closer" id="blacklist-btn"
                                    onclick="blacklistCompany()">블랙리스트 등록
                            </button>
                            <button class="approval btn-closer" id="approve-btn">승인</button>
                            <button class="refuse btn-closer" id="reject-btn">거절</button>
                            <button class="btn-light btn-closer hidden" id="cancel-blacklist-btn"
                                    onclick="cancelBlacklist()">블랙리스트 취소
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </section>
</main>
<script>
    // DOMStringMap 는 변수명의 대소문자 구분없이 모두 소문자로 사용해야 데이터가 받아진다.
    // 그래서 받는 데이터는 name 에 모두 소문자로 기입 해야 한다.
    document.addEventListener('DOMContentLoaded', function () {
        const detailButtons = document.querySelectorAll('.detail');
        const closeBtn = document.querySelector('.btn-cls');
        const modal = document.querySelector('.modal-bg');
        const approveBtn = document.querySelector('#approve-btn');
        const rejectBtn = document.querySelector('#reject-btn');
        const blacklistBtn = document.querySelector('#blacklist-btn');
        const cancelBlacklistBtn = document.querySelector('#cancel-blacklist-btn');

        detailButtons.forEach(function (button) {
            button.addEventListener('click', showModal);
        });

        closeBtn.addEventListener('click', closeModal);
        approveBtn.addEventListener('click', approveCompany);
        rejectBtn.addEventListener('click', rejectCompany);
        blacklistBtn.addEventListener('click', blacklistCompany);
        cancelBlacklistBtn.addEventListener('click', cancelBlacklist);

        function showModal(event) {
            const companyId = event.target.dataset.companyId; // 클릭된 요소의 데이터 속성에서 기업 ID 가져오기
            const companyData = document.querySelector(`#id-${companyId}`).dataset; // 해당 기업의 데이터 가져오기
            const modalInputs = modal.querySelectorAll('.modal-input-wrapper input');

            // 모달에 데이터 채우기
            modalInputs.forEach(function (input) {
                console.log(input.getAttribute('name').toString()); // 디버깅
                console.log(companyData[input.getAttribute('name').toString()]);
                const attributeName = input.getAttribute('name'); // name 의 이름과 동일한 데이터를 가져옴
                input.value = companyData[attributeName];
            });

            // 기업 상태에 따라 버튼 활성화/비활성화
            if (companyData.state === '승인') {
                approveBtn.classList.add('hidden'); // 승인 버튼
                rejectBtn.classList.add('hidden'); // 거절 버튼
                blacklistBtn.classList.add('hidden'); // 블랙 등록 버튼
                cancelBlacklistBtn.classList.remove('hidden'); // 블랙 취소 버튼
            } else if (companyData.state === '대기중') {
                approveBtn.classList.remove('hidden'); // 승인 버튼
                rejectBtn.classList.remove('hidden'); // 거절 버튼
                blacklistBtn.classList.add('hidden'); // 블랙 등록 버튼
                cancelBlacklistBtn.classList.add('hidden'); // 블랙 취소 버튼
            } else {
                approveBtn.classList.add('hidden'); // 승인 버튼
                rejectBtn.classList.add('hidden'); // 거절 버튼
                blacklistBtn.classList.remove('hidden'); // 블랙 등록 버튼
                cancelBlacklistBtn.classList.add('hidden'); // 블랙 취소 버튼
            }

            modal.classList.remove('hidden');
            modal.classList.add('visible');
        }

        function closeModal() {
            modal.classList.add('hidden');
            modal.classList.remove('visible');
        }

        function approveCompany() {
            // 승인 로직 추가
        }

        function rejectCompany() {
            // 거절 로직 추가
        }

        function blacklistCompany(companyId) {
            fetch(`/admin/company/black/${companyId}`, {
                method: 'PUT',
                headers: {
                    'Content-Type': 'application/json'
                },
            })
                    .then(response => {
                        if (!response.ok) {
                            throw new Error('블랙리스트 등록에 실패했습니다.');
                        }
                        console.log('블랙리스트가 성공적으로 등록되었습니다.');
                    })
                    .catch(error => {
                        console.error('오류 발생:', error);
                    });
        }

        function cancelBlacklist(companyId) {
            fetch(`/admin/company/black/cancel/${companyId}`, {
                method: 'PUT',
                headers: {
                    'Content-Type': 'application/json'
                }
            })
                    .then(response => {
                        if (!response.ok) {
                            throw new Error('블랙리스트 취소에 실패했습니다.');
                        }
                        console.log('블랙리스트가 성공적으로 취소되었습니다.');
                    })
                    .catch(error => {
                        console.error('오류 발생:', error);
                    });
        }
    });
</script>
</body>
</html>