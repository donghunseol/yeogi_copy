{{> company/layout/head}}
<body>
<main role="main">
    <section id="section n1">
        {{> company/layout/side}}
        <div class="content-page">
            <div class="content-tab-bar">
                <div class="tab-content current">
                    <div class="tab-head">
                        <p>내 정보 관리</p>
                    </div>
                    <div class="tab-item company info">
                        <p class="tab-title">정보 수정</p>
                        {{#sessionUser}}
                        <form action="/information/update/{{id}}" method="post" style="width: 100%;">
                            <input type="hidden" name ="id" value="{{id}}">
                            <div class="join-form-item">
                                <label for="emailId">이메일</label>
                                <div class="input-wrapper email">
                                    <input type="text" id="emailId" name="email" value="{{email}}" disabled>
                                </div>
                            </div>
                            <div class="join-form-item">
                                <label for="join-password">비밀번호</label>
                                <div class="input-wrapper password">
                                    <input type="password" id="join-password" placeholder="비밀번호" name="password" value="{{password}}">
                                </div>
                            </div>
                            <div class="join-form-item">
                                <label for="join-password">전화번호</label>
                                <div class="input-wrapper phone">
                                    <input type="text" id="phoneNumber" maxlength="13" name="phone" value="{{phone}}">
                                </div>
                            </div>
                            <div class="join-form-item">
                                <label for="join-password">사업자 등록번호</label>
                                <div class="input-wrapper business-number">
                                    <input type="text" id="businessNumber" maxlength="12" name="businessNumber" value ="{{businessNumber}}" disabled>
                                </div>
                            </div>
                            <div class="join-form-item">
                                <label for="join-password">사업자 주소</label>
                                <div class="input-wrapper address">
                                    <input type="text" id="sample6_postcode" name="businessAddress" value="{{businessAddress}}" disabled>
                                </div>
                            </div>
                            {{/sessionUser}}
                            <div class="button-wrapper">
                                <button class="btn black">수정하기</button>
                                <button type="button" onclick="history.back()" class="btn black border">취소하기</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>
<script>

</script>
</body>

</html>