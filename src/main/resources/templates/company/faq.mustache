{{> layout/head}}
<body>
<main role="main">
    <section id="section n1">
        {{> layout/side}}
        <div class="content-page">
            <div class="content-tab-bar">
                <ul class="tab-nav">
                    <li class="tab-link"><a href="/company/join">가입현황</a></li>
                    <li class="tab-link"><a href="/company/report">리뷰신고</a></li>
                    <li class="tab-link"><a href="/company/question">문의사항</a></li>
                    <li class="tab-link current"><a href="/company/faq">자주묻는 질문</a></li>
                </ul>
                <div class="tab-content current">
                    <div class="tab-head">
                        <p>FAQ</p>
                    </div>
                    <div class="tab-item">
                        <form action="#" method="#" style="width: 100%;">
                            <ul class="search-box">
                                <li class="search-left">
                                    <span>총 FAQ작성<em> 20 </em>개</span>
                                </li>
                                <li class="search-right">
                                    <div class=" duration">
                                        <label for="daterange">기간</label>
                                        <input type="text" name="daterange" value="" id="daterange" />
                                    </div>
                                    <div>
                                        <div class="tab-input-wrapper">
                                            <input class="input-id" type="text" name="keyword" placeholder="검색어 입력">
                                            <input class="submit-btn" type="submit" value="Search">
                                        </div>
                                    </div>
                                </li>
                            </ul>
                        </form>
                        <table>
                            <colgroup>
                                <col width="50%">
                                <col width="35%">
                                <col width="15%">
                            </colgroup>
                            <thead>
                            <tr>
                                <th scope="col">제목</th>
                                <th scope="col">작성자</th>
                                <th scope="col">작성일</th>
                            </tr>
                            </thead>
                            <tbody>
                            <tr class="review">
                                <td class="title">비밀번호는 어떻게 찾아요?</td>
                                <td class="content">M to M</td>
                                <td>2024.05.03</td>
                                <td class="link">
                                    <a href="/company/faq-detail"></a>
                                </td>
                            </tr>
                            </tbody>
                        </table>
                    </div>
                    <div class="faq-button-wrapper">
                        <a class="btn black" href="/company/faq-write">작성</a>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>

</body>
</html>