{{> company/layout/head}}

<body>
<main role="main">
    <section id="section n1">
        <aside class="side-bar">
            <div class="side-wrapper">
                <div class="side-content header">
                    <figure>
                        <img src="/images/main_logo.jpg" alt="이미지 들어가는 공간">
                    </figure>
                    <span>여어떻노</span>
                </div>
                {{#sessionUser}}
                    <div class="side-content info">
                        <p>기업이름 : {{businessName}}</p>
                        <p>접속일시 : {{#sessionUser}}{{loginTime}}{{/sessionUser}}</p>
                        <p>승인상태 : {{state}}</p>
                        <a href="/logout">로그아웃</a>
                    </div>
                {{/sessionUser}}
                <div class="side-menu">
                    <p class="head-menu active"><i class="fa-solid fa-building"></i>숙소관리</p>
                    <ul class="sub active">
                        <li class="on"><a href="/manage/stays">숙소관리</a></li>
                        <li><a href="/reservations/status">예약현황</a></li>
                        <li><a href="/revenue">매출현황</a></li>
                    </ul>
                </div>
                <div class="side-menu">
                    <p class="head-menu"><i class="fa-solid fa-user"></i>내 정보 관리</p>
                    <ul class="sub">
                        <li><a href="/company/information">정보수정</a></li>
                    </ul>
                </div>
            </div>
        </aside>
        <div class="content-page">
            <div class="content-tab-bar">
                <div class="tab-content current">
                    <div class="tab-head">
                        <p>숙소 상세보기</p>
                    </div>
                    <div class="tab-item company stay">
                        {{#stayList}}
                            <p class="tab-title">{{stayName}}({{stayCategory}})</p>
                        <div class="stay-detail">
                            <div class="content top">
                                <div class="img-wrapper">
                                    <img src="{{imagePath}}" alt="호텔 이미지">
                                </div>
                                <div class="text-wrapper">
                                    <p class="text-item">
                                        <span class="head"><i class="fa-solid fa-house"></i><em>숙소이름</em></span>
                                        <span class="body">{{stayName}}</span>
                                    </p>
                                    <p class="text-item">
                                                <span class="head"><i
                                                        class="fa-solid fa-location-dot"></i><em>숙소주소</em></span>
                                        <span class="body">{{stayAddress}}</span>
                                    </p>
                                    <p class="text-item">
                                                <span class="head"><i
                                                        class="fa-solid fa-layer-group"></i><em>숙소분류</em></span>
                                        <span class="body">{{stayCategory}}</span>
                                    </p>
                                </div>
                            </div>
                            <div class="stay button-wrapper">
                                <form action="/stay/update-form/{{stayId}}" method="get">
                                    <button class="btn black">수정하기</button>
                                </form>
                                <form action="/stay/delete/{{stayId}}" method="post">
                                    <button class="btn black border">삭제하기</button>
                                </form>
                            </div>
                        {{/stayList}}
                        <div class="content bottom">
                            <div class="room-head">
                                <p class="sub-title">객실리스트</p>
                                <a href="/room/register-form/{{stayList.stayId}}">객실추가하기</a>
                            </div>
                            <dl class="list-title">
                                <dd>객실등급</dd>
                                <dd>객실개수</dd>
                                <dd>상세보기</dd>
                            </dl>
                            <ul>
                                <!-- <li class="unknown">
                                    <div class="item">
                                        <span>등록된 객실이 없습니다.</span>
                                    </div>
                                </li> -->
                                {{#detailList}}
                                    <li>
                                        <div class="item">
                                            <div class="text-wrapper">
                                                <p class="text-item">
<!--                                                    <span class="head"><i></i><em>객실 등급</em></span>-->
                                                    <span class="body">{{roomTier}}</span>
                                                </p>
                                                <p class="text-item">
<!--                                                    <span class="head"><i></i><em>객실 개수</em></span>-->
                                                    <span class="body">{{tierCount}}개</span>
                                                </p>
                                                <form action="/manage/stays/{{stayId}}/rooms" method="get" style="width: 100px; margin-left: auto">
                                                    <input type="hidden" name="tier" value="{{roomTier}}"/>
                                                    <div class="button-wrapper">
                                                        <button class="btn black">상세보기</button>
                                                    </div>
                                                </form>
                                            </div>

                                        </div>
                                    </li>
                                {{/detailList}}
                            </ul>
                        </div>
                    </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>
<script>

</script>
</body>

</html>