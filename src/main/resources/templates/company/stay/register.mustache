                                                        <option value="호텔" id="hotel">호텔</option>
                                                        <option value="홈&빌라" id="motel">홈&빌라</option>
                                                        <option value="게스트하우스" id="motel">게하</option>
                                                        <option value="모텔" id="motel">모텔</option>
                                                        <option value="해외" id="motel">해외</option>
                                                        <option value="펜션" id="pension">펜션</option>
                                                        <option value="캠핑" id="camping">캠핑</option>
                                                    </select>
                                                </div>
                                            </div>
                                            <div class="join-form-item check">
                                                <label class="title" for="loging-name">옵션분류</label>
                                                <div class="check-box-wrapper">
                                                    <div class="input-wrapper">
                                                        <label for="option1">피트니스</label>
                                                        <input type="checkbox" name="options" value="피트니스" id="option1">
                                                    </div>
                                                    <div class="input-wrapper">
                                                        <label for="option2">침대</label>
                                                        <input type="checkbox" name="options" value="침대" id="option2">
                                                    </div>
                                                    <div class="input-wrapper">
                                                        <label for="option3">와이파이</label>
                                                        <input type="checkbox" name="options" value="와이파이" id="option3">
                                                    </div>
                                                    <div class="input-wrapper">
                                                        <label for="option4">오션뷰</label>
                                                        <input type="checkbox" name="options" value="오션뷰" id="option4">
                                                    </div>
                                                    <div class="input-wrapper">
                                                        <label for="option4">미니바</label>
                                                        <input type="checkbox" name="options" value="미니바" id="option4">
                                                    </div>
                                                    <div class="input-wrapper">
                                                        <label for="option4">수영장</label>
                                                        <input type="checkbox" name="options" value="수영장" id="option4">
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="join-form-item">
                                                <label class="title" for="join-password">주소</label>
                                                <div class="input-wrapper address">
                                                    <input type="text" id="sample6_postcode" placeholder="우편번호">
                                                    <input type="button" onclick="sample6_execDaumPostcode()"
                                                           value="우편번호 찾기"><br>
                                                    <input type="text" id="sample6_address" placeholder="주소" name="address"><br>
                                                    <input type="text" id="sample6_detailAddress"
                                                           placeholder="상세주소">
                                                    <input type="text" id="sample6_extraAddress" placeholder="참고항목">
                                                </div>
                                            </div>
                                        </div>
