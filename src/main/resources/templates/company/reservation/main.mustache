{{> company/layout/head}}
<body>
<main role="main">
    <section id="section n1">
        {{> company/layout/side}}
        <div class="content-page">
            <div class="content-tab-bar">
                <div class="tab-content current">
                    <div class="tab-head">
                        <p>예약 현황</p>
                    </div>
                    <div class="tab-item">
                        <form action="/reservations/status" method="get" style="width: 100%;">
                            <ul class="search-box">
                                <li class="search-left">
                                    <span>총 예약 건수 <em>{{reservationCount}}</em>건</span>
                                </li>
                                <li class="search-right">
                                    <div>
                                        <div class="tab-input-wrapper">
                                            <input class="input-id" type="text" name="keyword" placeholder="검색어 입력">
                                            <input class="submit-btn" type="submit" value="Search">
                                        </div>
                                    </div>
                                </li>
                            </ul>
                        </form>
                        <table>
                            <colgroup>
                                <col width="20%">
                                <col width="10%">
                                <col width="20%">
                                <col width="20%">
                                <col width="15%">
                                <col width="15%">
                            </colgroup>
                            <thead>
                            <tr>
                                <th scope="col">숙소 (객실)</th>
                                <th scope="col">예약자</th>
                                <th scope="col">체크인</th>
                                <th scope="col">체크아웃</th>
                                <th scope="col">예약 현황</th>
                                <th scope="col">상세보기</th>
                            </tr>
                            </thead>
                            <tbody>
                            {{#reservationList}}
                                <tr>
                                    <td class="title">{{stayName}} ({{roomName}})</td>
                                    <td>{{reservationName}}</td>
                                    <td>{{checkInDate}}  {{checkInTime}}</td>
                                    <td>{{checkOutDate}}  {{checkOutTime}}</td>
                                    <td>{{payState}}</td>
                                    <td><span class="detail" onclick="location.href='/reservations/{{reservationId}}'">상세보기</span></td>
                                </tr>
                            {{/reservationList}}
                            {{#keywordReservationList}}
                                <tr>
                                    <td class="title">{{stayName}} ({{roomName}})</td>
                                    <td>{{reservationName}}</td>
                                    <td>{{checkInDate}}  {{checkInTime}}</td>
                                    <td>{{checkOutDate}}  {{checkOutTime}}</td>
                                    <td>{{payState}}</td>
                                    <td><span class="detail" onclick="location.href='/reservations/{{reservationId}}'">상세보기</span></td>
                                </tr>
                            {{/keywordReservationList}}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>
</body>

</html>