{{> company/layout/head}}
<body>
<main role="main">
    <section id="section n1">
        {{> company/layout/side}}
        <div class="content-page">
            <div class="content-tab-bar">
                <div class="tab-content current">
                    <div class="tab-head">
                        <p>예약 현황</p>
                    </div>
                    <div class="tab-item">
                        <form action="#" method="#" style="width: 100%;">
                            <ul class="search-box">
                                <li class="search-left">
                                    <span>총 예약 건수 <em>{{reservationCount}}</em>건</span>
                                </li>
                                <li class="search-right">
                                    <div>
                                        <div class="tab-input-wrapper">
                                            <input class="input-id" type="text" name="keyword" placeholder="검색어 입력">
                                            <input class="submit-btn" type="submit" value="Search">
                                        </div>
                                    </div>
                                </li>
                            </ul>
                        </form>
                        <table>
                            <colgroup>
                                <col width="30%">
                                <col width="15%">
                                <col width="20%">
                                <col width="20%">
                                <col width="15%">
                            </colgroup>
                            <thead>
                            <tr>
                                <th scope="col">숙소 (객실)</th>
                                <th scope="col">예약자</th>
                                <th scope="col">체크인</th>
                                <th scope="col">체크아웃</th>
                                <th scope="col">상세보기</th>
                            </tr>
                            </thead>
                            <tbody>
                            {{#reservationList}}
                                <tr>
                                    <td class="title">{{stayName}} ({{roomName}})</td>
                                    <td>{{reservationName}}</td>
                                    <td>{{checkInDate}}  {{checkInTime}}</td>
                                    <td>{{checkOutDate}}  {{checkOutTime}}</td>
                                    <td><span class="detail">상세보기</span></td>
                                </tr>
                            {{/reservationList}}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <!-- 회원가입 모달창 -->
        <div class="modal-bg hidden">
            <div class="modal">
                <div class="modal-head">
                    <p class="modal-txt">예약 상세정보</p>
                    <button class="btn-cls">X</button>
                </div>
                <form action="#" method="#">
                    <div class="modal-content">
                        <div class="modal-input-wrapper">
                            <label for="stayandroomname">숙소(객실)</label>
                            <input disabled type="text" name="stayandroomname">
                        </div>
                        <div class="modal-input-wrapper">
                            <label for="address">숙소 주소</label>
                            <input disabled type="text" name="address">
                        </div>
                        <div class="modal-input-wrapper">
                            <label for="checkin">체크인</label>
                            <input disabled type="text" name="checkin">
                        </div>
                        <div class="modal-input-wrapper">
                            <label for="checkout">체크아웃</label>
                            <input disabled type="text" name="checkout">
                        </div>
                        <div class="modal-input-wrapper">
                            <label for="reservationname">예약자 대표 이름</label>
                            <input disabled type="text" name="reservationname">
                        </div>
                        <div class="modal-input-wrapper">
                            <label for="reservationphone">예약자 대표 연락처</label>
                            <input disabled type="text" name="reservationphone">
                        </div>
                        <div class="modal-input-wrapper">
                            <label for="payamountandway">결제 금액(수단)</label>
                            <input disabled type="text" name="payamountandway">
                        </div>
                        <div class="modal-input-wrapper">
                            <label for="payat">결제 일자</label>
                            <input disabled type="text" name="payat">
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </section>
</main>
<script>
    // 모달창
    document.addEventListener('DOMContentLoaded', function () {
        const detailButtons = document.querySelectorAll('.detail');
        const closeBtn = document.querySelector('.btn-cls');
        const modal = document.querySelector('.modal-bg');
        const closerBtn1 = document.querySelector('.btn-closer.refuse');
        const closerBtn2= document.querySelector('.btn-closer.approval');

        detailButtons.forEach(function (button) {
            button.addEventListener('click', showModal);
        });

        closeBtn.addEventListener('click', closeModal);
        closerBtn1.addEventListener('click', closerAticon1);
        closerBtn2.addEventListener('click', closerAticon2);

        function showModal() {
            modal.classList.remove('hidden');
            modal.classList.add('visible');
        }

        function closeModal() {
            modal.classList.add('hidden');
            modal.classList.remove('visible');
        }

        function closerAticon1() {
            closeModal();
        }
        function closerAticon2() {
            closeModal();
        }
    });
</script>
</body>

</html>