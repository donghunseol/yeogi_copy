{{> admin/layout/head}}
<body>
<main role="main">
    <section id="section n1">
        {{> admin/layout/side}}
        <div class="content-page">
            <div class="content-tab-bar">
                <ul class="tab-nav">
                    <li class="tab-link current"><a href="/company/join">가입현황</a></li>
                    <li class="tab-link "><a href="/company/report">리뷰신고</a></li>
                    <li class="tab-link"><a href="/company/question">문의사항</a></li>
                    <li class="tab-link"><a href="/company/faq">자주묻는 질문</a></li>
                </ul>
                <div class="tab-content current">
                    <div class="tab-head">
                        <p>예약 현황</p>
                    </div>
                    <div class="tab-item">
                        <form action="#" method="#" style="width: 100%;">
                            <ul class="search-box">
                                <li class="search-left">
                                    <span>총 예약 건수 <em>2</em>건</span>
                                </li>
                                <li class="search-right">
                                    <div>
                                        <div class="tab-input-wrapper">
                                            <input class="input-id" type="text" name="keyword" placeholder="검색어 입력">
                                            <input class="submit-btn" type="submit" value="Search">
                                        </div>
                                    </div>
                                </li>
                            </ul>
                        </form>
                        <table>
                            <colgroup>
                                <col width="30%">
                                <col width="15%">
                                <col width="20%">
                                <col width="20%">
                                <col width="15%">
                            </colgroup>
                            <thead>
                            <tr>
                                <th scope="col">숙소(객실)</th>
                                <th scope="col">예약자</th>
                                <th scope="col">체크인</th>
                                <th scope="col">체크아웃</th>
                                <th scope="col">상세보기</th>
                            </tr>
                            </thead>
                            <tbody>
                                    <tr>
                                        <td class="title">?</td>
                                        <td>?</td>
                                        <td>?</td>
                                        <td><span class="state wait">?</span></td>
                                        <td><span class="detail">상세보기</span></td>
                                    </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <!-- 회원가입 모달창 -->
        <div class="modal-bg hidden">
            <div class="modal">
                <div class="modal-head">
                    <p class="modal-txt">회원 상세정보</p>
                    <button class="btn-cls">X</button>
                </div>
                <form action="#" method="#">
                    <div class="modal-content">
                        <div class="modal-input-wrapper">
                            <label for="username">회원이름</label>
                            <input disabled type="text" name="username">
                        </div>
                        <div class="modal-input-wrapper">
                            <label for="birth">생년월일</label>
                            <input disabled type="text" name="birth">
                        </div>
                        <div class="modal-input-wrapper">
                            <label for="phone">전화번호</label>
                            <input disabled type="text" name="phone">
                        </div>
                        <div class="modal-input-wrapper">
                            <label for="email">이메일</label>
                            <input disabled type="text" name="email">
                        </div>
                        <div class="modal-input-wrapper">
                            <label for="reportCount">신고 받은 횟수</label>
                            <input disabled type="text" name="reportCount">
                        </div>
                        <div class="modal-input-wrapper">
                            <label for="state">상태</label>
                            <input disabled type="text" name="state">
                        </div>
                        <div class="modal-input-wrapper">
                            <label for="createdAt">회원가입 일자</label>
                            <input disabled type="text" name="createdAt">
                        </div>
                        <div class="modal-button-wrapper">
                            <button class="approval btn-closer">해당 회원의 예약 정보</button>
                            <button class="refuse btn-closer">해당 해원의 리뷰 정보</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </section>
</main>
<script>
    // 모달창
    document.addEventListener('DOMContentLoaded', function () {
        const detailButtons = document.querySelectorAll('.detail');
        const closeBtn = document.querySelector('.btn-cls');
        const modal = document.querySelector('.modal-bg');
        const closerBtn1 = document.querySelector('.btn-closer.refuse');
        const closerBtn2= document.querySelector('.btn-closer.approval');

        detailButtons.forEach(function (button) {
            button.addEventListener('click', showModal);
        });

        closeBtn.addEventListener('click', closeModal);
        closerBtn1.addEventListener('click', closerAticon1);
        closerBtn2.addEventListener('click', closerAticon2);

        function showModal() {
            modal.classList.remove('hidden');
            modal.classList.add('visible');
        }

        function closeModal() {
            modal.classList.add('hidden');
            modal.classList.remove('visible');
        }

        function closerAticon1() {
            closeModal();
        }
        function closerAticon2() {
            closeModal();
        }
    });
</script>
</body>

</html>